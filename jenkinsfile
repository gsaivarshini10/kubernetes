pipeline {
    agent any
    environment {
        IMG = "gsaivarshini10/abc"
        DEPLOY = "flask-deployment"
        CONT = "flask"
    }

    stages {
        stage('Build') {
            steps {
                bat "docker build -t %IMG%:%BUILD_NUMBER% ."
            }
        }

        stage('Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'U',
                    passwordVariable: 'P'
                )]) {
                    bat "echo %P% | docker login -u %U% --password-stdin"
                    bat "docker push %IMG%:%BUILD_NUMBER%"
                }
            }
        }

        stage('Deploy') {
            steps {
                bat "kubectl set image deployment/%DEPLOY% %CONT%=%IMG%:%BUILD_NUMBER%"
                bat "kubectl rollout restart deployment/%DEPLOY%"
                bat "kubectl rollout status deployment/%DEPLOY%"
            }
        }
    }

    post {
        success {
            echo "üöÄ Successfully deployed image: gsaivarshini10/abc:${BUILD_NUMBER}"
        }
        failure {
            echo "‚ùå Deployment failed. Check error logs."
        }
    }
}

