pipeline {
    agent any

    environment {
        IMG = "gsaivarshini10/abc"      // Docker Hub repository
        DEPLOY = "flask-deployment"     // Kubernetes deployment name
        CONT = "flask"                  // Container name inside deployment
    }

    stages {

        stage('Build Docker Image') {
            steps {
                echo "üî® Building docker image..."
                bat """
                    docker build -t %IMG%:%BUILD_NUMBER% .
                """
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo "üì§ Pushing image..."
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub',
                    usernameVariable: 'U',
                    passwordVariable: 'P'
                )]) {
                    bat "echo %P% | docker login -u %U% --password-stdin"
                    bat "docker push %IMG%:%BUILD_NUMBER%"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "üöÄ Updating Kubernetes deployment..."
                bat """
                    kubectl set image deployment/%DEPLOY% %CONT%=%IMG%:%BUILD_NUMBER%
                    kubectl rollout restart deployment/%DEPLOY%
                    kubectl rollout status deployment/%DEPLOY%
                """
            }
        }
    }

    post {
        success {
            echo "‚úÖ Successfully deployed: %IMG%:%BUILD_NUMBER%"
        }
        failure {
            echo "‚ùå Deployment failed. Check Jenkins logs."
        }
    }
}
