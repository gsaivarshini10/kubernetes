pipeline {
    agent any
    environment {
        IMG = "gsaivarshini10/abc"
    }

    stages {
        stage('Build') {
            steps {
                bat "docker build -t %IMG%:%BUILD_NUMBER% ."
            }
        }

        stage('Push') {
            steps {
                withCredentials([usernamePassword(credentialsId:'dockerhub-creds', usernameVariable:'U', passwordVariable:'P')]) {
                    bat """
                        echo %P% | docker login -u %U% --password-stdin
                        docker push %IMG%:%BUILD_NUMBER%
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                bat "kubectl set image deployment/flask-deployment flask=%IMG%:%BUILD_NUMBER%"
            }
        }
    }
}
